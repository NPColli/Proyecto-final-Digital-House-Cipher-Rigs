<!DOCTYPE html>
<html>

<head>
  <title>Rigs</title>
  <%- include('../partials/head') %>
</head>

<body>
  <style>
  </style>
  <%- include ('../partials/header') %>
  <main>
    <video class="video" preload="auto" autoplay loop muted>
      <source src="../img/detail.mp4" type="video/mp4">
      <source src="../img/detail.mp4" btnvertype="video/webm">
      <source src="../img/detail.mp4" type="video/ogg">
  </video>
    <div class="Productos">
      <div class="espacioProducto">
        <img src="../img/rigs/<%=rigs.image %>" class="avatarproducto" alt="La imagen no pudo cargar correctamente">
      </div>
      <div class="textoProductos">
        <h1><%=rigs.titulo%></h1>
        <br>
        <h2>Especificaciones:</h2>
        <p class="textoEspec"><%=rigs.especificaciones%></p>
        <h2 class="h2Detail">Precio:</h2>
        <h3>US$<%=rigs.precio%></h3>
        <br>
        <% if (locals.userLogged) { %>
          <input class="quantity-field" type="number" name="cantidad" value="1" required min="1">
          <br>
          <form action="/carrito/<%=rigs.id_rig%>" method="POST" class="product-cart-form">
          <button class="buttons" type="submit" value="sumarAlCarrito">
           Comprar
          </button>
          <% console.log(rigs) %>
        </form>
          <% } %>
          <br><br>
          <% if (locals.userLogged && locals.userLogged.rol===0) { %>
            <a class="form1" href="/rigs/editar/<%=rigs.id_rig%>">
              <button class="buttons">
                Editar RIG
              </button></a>
            <% } %>
        <br>
      </div>
    </div>
  </main>
  <footer>
    <%- include('../partials/footer') %>
  </footer>
</body>

</html>