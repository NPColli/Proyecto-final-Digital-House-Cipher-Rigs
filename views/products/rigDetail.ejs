<!DOCTYPE html>
<html>

<head>
  <title>Rigs</title>
  <%- include('../partials/head') %>
</head>

<body>
  <style>
  </style>
  <%- include ('../partials/header') %>
  <main>
    <video class="video" preload="auto" autoplay loop muted>
      <source src="../img/detail.mp4" type="video/mp4">
      <source src="../img/detail.mp4" btnvertype="video/webm">
      <source src="../img/detail.mp4" type="video/ogg">
  </video>
    <div class="Productos">
      <div class="espacioProducto">
        <img src="../img/rigs/<%=rigs.image %>" class="avatarproducto" alt="La imagen no pudo cargar correctamente">
      </div>
      <div class="textoProductos">
        <h1><%=rigs.titulo%></h1>
        <br>
        <h2>Especificaciones:</h2>
        <p class="textoEspec"><%=rigs.especificaciones%></p>
        <h2 class="h2Detail">Precio:</h2>
        <h3>US$<%=rigs.precio%></h3>
        <br>
        <a class="form1" href="/carrito">
          <button class="buttons" type="submit">
            Comprar
          </button></a>
        </a>
          <br><br>
          <% if (locals.userLogged && locals.userLogged.rol===0) { %>
            <a class="form1" href="/rigs/editar/<%=rigs.id_rigs%>">
              <button class="buttons">
                Editar RIG
              </button></a>
            <% } %>
            <br>
            <% if (locals.userLogged && locals.userLogged.rol===0) { %>
              <a class="form1"> <form action="/rigs/destruir/<%=rigs.id_rigs%>" method="POST" class="form1">
                <button type="submit" class="buttons">
                  Eliminar RIG
                </button></a>
              </form>
              <% } %>
              <br>
      </div>
    </div>
  </main>
  <footer>
    <%- include('../partials/footer') %>
  </footer>
</body>

</html>